{{ define "uuid" }}
<div class="relative flex w-full max-w-[35rem] flex-col rounded-lg bg-white border border-slate-200 shadow-sm">
    <div class="p-3">
        <div class="flex flex-row">
            <div class="basis-1/3">
                <div class="flex flex-col">
                    <button class="btn btn-outline btn-secondary" onclick="generateUuid4()">
                        <i class="fa-solid fa-shuffle"></i>
                    </button>
                    <div class="pt-1"></div>
                    <button class="btn btn-outline btn-success" onclick="copyUuid4()">
                        <i class="fa-solid fa-fw fa-copy"></i>
                    </button>   
                </div>
            </div>
            <div class="basis-2/3">
                <div class="flex flex-row pt-6 justify-center items-center">
                    <p class="hidden" id="uuid4"></p>
                </div> 
            </div>
        </div>
    </div>
</div>
{{ end }}